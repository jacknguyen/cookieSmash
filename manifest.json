{
  "manifest_version": 2,
  "name": "CookieSmash",
  "version": "0.1",
  "description": "Quickly remove all cookies associate on a site.",
  "icons": {
    "128": "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "CookieSmash"
  },
  "permissions": [
    "cookies",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": ["background.js"]
  }
}
