// List of all possible options
// https://developer.chrome.com/extensions/manifest
{
  // Required
  "manifest_version": 2,
  "name": "CookieSmash",
  "version": "0.1",

  // Recommended
  "description": "Quickly remove all cookies associate on a site.",
  // These icons are shown when on the chrome://extensions pages
  // https://developer.chrome.com/extensions/manifest/icons
  "icons": {
    "128": "icon.png"
  },

  // Can only choose one between browser_action or page_action
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "CookieSmash"
  },

  // Setting permission to access chrome.cookies API
  // https://developer.chrome.com/extensions/cookies#type-Cookie
  "permissions": [
    "cookies",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],

  "background": {
    "scripts": ["background.js"]
  }
}
